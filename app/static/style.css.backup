.role-dropdown {
    position: fixed;
    background: white;
    border: 1px solid #e0e0e0;
    border-radius: 10px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    padding: 8px 0;
    z-index: 2000;
    display: none;
    box-sizing: border-box;
}

.role-dropdown.visible {
    display: block;
}

.role-dropdown-option {
    width: 100%;
    border: none;
    background: transparent;
    text-align: left;
    padding: 10px 16px;
    font-size: 14px;
    cursor: pointer;
    color: #333;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.role-dropdown-option:hover,
.role-dropdown-option:focus {
    background: #fff4e0;
    outline: none;
}

.role-dropdown-option.selected {
    color: #dd9e00;
    font-weight: 600;
}

.role-dropdown-option svg {
    width: 16px;
    height: 16px;
}

html.dark-theme .role-dropdown {
    background: #2a2a2a;
    border-color: rgba(255, 255, 255, 0.08);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.45);
